public class recursion9{
    public static void main(String[] args){
        boolean ans = sort({1, 2, 3, 4, 5, 6}, 0)
    }
    
    public static boolean sort(int[] arr, index){
        if(index == arr.length - 1){
            return true;
        }
        return arr[index] < arr[index] + 1 && sort(int[] arr, index + 1);
    }
}